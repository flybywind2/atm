# AI Problem Solving Copilot Environment Configuration
# ==================================================
# Copy this file to .env and update the values as needed

# Server Configuration
# --------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=info
RELOAD_MODE=true

# Database Configuration
# ----------------------
DATABASE_PATH=workflow_checkpoints.db
ENABLE_WAL_MODE=true
DATABASE_TIMEOUT=30

# LLM Configuration
# -----------------
## Primary LLM Service (internal/ollama)
## internal: 사내 llm을 사용
## ollama: 로컬 Ollama 서버 호출
LLM_SERVICE_TYPE=internal

# Internal LLM API Configuration
INTERNAL_LLM_API_URL=https://api.openai.com/v1
INTERNAL_LLM_API_KEY=your_openai_api_key_here
INTERNAL_LLM_MODEL=openai/gpt-oss:120b
# Internal LLM Headers (dotenv)
INTERNAL_LLM_TICKET=
INTERNAL_LLM_SYSTEM_NAME=ATM-System
INTERNAL_LLM_USER_ID=system-user
INTERNAL_LLM_USER_TYPE=AD

# (외부 LLM 제거) 외부 LLM 관련 설정은 사용하지 않습니다.

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:1b

# RAG Service Configuration
# -------------------------
RAG_SERVICE_ENABLED=false
RAG_PORTAL_URL=http://localhost:8080/api/rag
RAG_API_KEY=your_rag_api_key_here

# RAG Integration (company-specific)
# 백엔드가 직접 사내 RAG API를 호출할 때 사용하는 설정입니다.
# RAG_API_URL이 설정되면 RAG_PORTAL_URL보다 우선합니다.
RAG_API_URL=http://localhost:8000/retrieve-rrf
# 사내 티켓/자격 (x-dep-ticket)
RAG_TICKET=
# 검색 인덱스 이름
RAG_INDEX_NAME=your_index_name
# 권한 그룹(콤마로 구분)
RAG_PERMISSION_GROUP=ds
# RAG 요청 타임아웃(초)
RAG_TIMEOUT=20

# Workflow Configuration
# ----------------------
ENABLE_HUMAN_LOOP=true
USE_PERSISTENT_STORAGE=true
MAX_RETRY_COUNT=3
WORKFLOW_TIMEOUT=1800  # 30 minutes

# Security Configuration
# -----------------------
# CORS configuration (comma-separated)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Session Management
# ------------------
SESSION_CLEANUP_DAYS=30
AUTO_CLEANUP_ENABLED=true

# Development Configuration
# --------------------------
DEBUG_MODE=false
ENABLE_DETAILED_LOGGING=false

# Performance Configuration
# --------------------------
MAX_CONCURRENT_WORKFLOWS=10
STREAM_BUFFER_SIZE=1024

# Frontend Configuration
# -----------------------
FRONTEND_URL=http://localhost:8080
API_PREFIX=/api/v1

# File Paths
# ----------
FRONTEND_PATH=../frontend
STATIC_FILES_PATH=../frontend

# Backup Configuration
# --------------------
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7