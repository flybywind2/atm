# AI Problem Solving Copilot Environment Configuration
# ==================================================
# Copy this file to .env and update the values as needed

# Server Configuration
# --------------------
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
LOG_LEVEL=info
RELOAD_MODE=true

# Database Configuration
# ----------------------
DATABASE_PATH=workflow_checkpoints.db
ENABLE_WAL_MODE=true
DATABASE_TIMEOUT=30

# LLM Configuration
# -----------------
# Primary LLM Service (internal/external/ollama)
LLM_SERVICE_TYPE=internal

# Internal LLM API Configuration
INTERNAL_LLM_API_URL=http://localhost:11434/v1
INTERNAL_LLM_API_KEY=
INTERNAL_LLM_MODEL=llama3.2:latest

# External LLM API Configuration (OpenAI compatible)
EXTERNAL_LLM_API_URL=https://api.openai.com/v1
EXTERNAL_LLM_API_KEY=your_openai_api_key_here
EXTERNAL_LLM_MODEL=gpt-4o-mini

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# RAG Service Configuration
# -------------------------
RAG_SERVICE_ENABLED=true
RAG_PORTAL_URL=http://localhost:8080/api/rag
RAG_API_KEY=your_rag_api_key_here

# Workflow Configuration
# ----------------------
ENABLE_HUMAN_LOOP=true
USE_PERSISTENT_STORAGE=true
MAX_RETRY_COUNT=3
WORKFLOW_TIMEOUT=1800  # 30 minutes

# Security Configuration
# -----------------------
# CORS configuration (comma-separated)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Session Management
# ------------------
SESSION_CLEANUP_DAYS=30
AUTO_CLEANUP_ENABLED=true

# Development Configuration
# --------------------------
DEBUG_MODE=false
ENABLE_DETAILED_LOGGING=false

# Performance Configuration
# --------------------------
MAX_CONCURRENT_WORKFLOWS=10
STREAM_BUFFER_SIZE=1024

# Frontend Configuration
# -----------------------
FRONTEND_URL=http://localhost:8080
API_PREFIX=/api/v1

# File Paths
# ----------
FRONTEND_PATH=../frontend
STATIC_FILES_PATH=../frontend

# Backup Configuration
# --------------------
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7